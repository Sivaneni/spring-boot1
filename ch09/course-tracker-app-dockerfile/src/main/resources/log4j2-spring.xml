<?xml version="1.0" encoding="UTF-8"?>
<configuration>
     <appender name="SPLUNK" class="ch.qos.logback.core.net.ssl.SSLTCPAppender">
       <remoteHost>splunk-container</remoteHost>
       <port>8088</port>
       <ssl>
         <keyStore>splunk.jks</keyStore>
         <keyStorePassword>password</keyStorePassword>
       </ssl>
       <encoder>
         <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
       </encoder>
     </appender>
     <root level="info">
       <appender-ref ref="SPLUNK" />
     </root>
   </configuration>
