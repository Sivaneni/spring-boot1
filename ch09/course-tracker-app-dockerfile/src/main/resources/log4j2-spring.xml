<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%style{%d{ISO8601}} %highlight{%-5level }[%style{%t}{bright,blue}] %style{%C{10}}{bright,yellow}: %msg%n%throwable"/>
        </Console>

        <Socket name="SplunkHttp" protocol="SSL" host="https://splunk-container" port="8088">
            <SSL>
                <keyStore location="splunk.jks" password="password"/>
                <trustStore location="splunk.jks" password="password"/>
            </SSL>
            <JsonLayout complete="false" compact="true">
                <KeyValuePair key="token" value="${env:SPLUNK_TOKEN}"/>
                <KeyValuePair key="index" value="order_ui_dev"/>
                <KeyValuePair key="source" value="http-event-logs"/>
                <KeyValuePair key="sourcetype" value="log4j"/>
            </JsonLayout>
        </Socket>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="SplunkHttp"/>
        </Root>
    </Loggers>
</Configuration>
